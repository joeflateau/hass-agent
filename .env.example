# MQTT Broker Configuration
MQTT_BROKER=mqtt://homeassistant.local:1883

# MQTT Authentication (optional)
# MQTT_USERNAME=your_username
# MQTT_PASSWORD=your_password

# Device Configuration (REQUIRED)
DEVICE_ID=macos-macbook-pro-001
DEVICE_NAME=Joes_Macbook_Pro
UPDATE_INTERVAL=30000

# Auto-Upgrade Configuration
AUTO_UPGRADE=true                    # Enable/disable automatic upgrades
UPGRADE_CHECK_INTERVAL=10800000      # How often to check for updates (3 hours in ms)
INSTALL_SCRIPT_URL=https://github.com/joeflateau/hass-agent/releases/latest/download/install.sh

# Example configurations:
# For Home Assistant Add-on Mosquitto broker:
# MQTT_BROKER=mqtt://homeassistant.local:1883
# MQTT_USERNAME=your_ha_username
# MQTT_PASSWORD=your_ha_password

# For external MQTT broker with SSL:
# MQTT_BROKER=mqtts://your-broker.com:8883
# MQTT_USERNAME=your_username
# MQTT_PASSWORD=your_password
